<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/Css/Main.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="header">
        <h1>Web xem phim</h1>
        <p>Nơi cho bạn thư giãn sau những giờ học mệt mỏi.</p>
    </div>

    <div class="navbar">
        <ul class="nav navbar-nav" style="color:white">
            <li>@Html.ActionLink("Trang Chủ", "TrangChu", "Home")</li>
            <li>@Html.ActionLink("Về Chúng Tôi", "About", "Home")</li>
            <li>@Html.ActionLink("Liên Hệ", "Contact", "Home")</li>
            <li>@Html.ActionLink("Trailer Phim", "Trailer", "Home")</li>
            <li>@Html.ActionLink("Mới Cập Nhật", "NewMovie", "Home")</li>
            <li style="left:900px">@Html.ActionLink("Đăng Nhập", "DangNhap", "Home")</li>
        </ul>
    </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <div class="footer">
                <div style="background-color: #333; color: white; padding: 20px; text-align: center;">
                    <h2>Thông tin liên hệ</h2>
                    <p>Địa chỉ: Số 123 Đường Phố, Thành phố, Quốc gia</p>
                    <p>Email: xemphimvui@email.com</p>
                    <p>Điện thoại: +84 123 456 789</p>
                </div>
                <div style="background-color: #1abc9c; color: white; padding: 20px; text-align: center;">
                    <p>&copy; 2023 Trang web xem phim. Bản quyền thuộc về chúng tôi.</p>
                </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
