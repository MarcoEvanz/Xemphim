@{
    ViewBag.Title = "ChiTietPhim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Xemphim.Models.Phim
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2 class="text-center text-primary">Chi Tiết Phim</h2>
            <h2 class="text-center">@Model.TieuDe</h2>
            <div class="text-center">
                <img src="~/Content/MovieIMG/@Model.HinhMinhHoa" alt="@Model.TenPhim" style="width:250px; height:250px" class="rounded mx-auto d-block img-thumbnail">
                <div class="mt-3">
                    <a href="@Url.Action("XemPhim", "Home", new { id =  Model.IdPhim})" class="btn btn-success text-white">Xem Ngay</a>
                </div>
            </div>
        </div>
    </div>
</div>

